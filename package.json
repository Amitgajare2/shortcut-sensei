      },
      {
        "command": "shortcutSensei.learnShortcuts",
        "title": "Shortcut Sensei: Only Keyboard Shortcuts"
      },
      {
        "command": "shortcutSensei.learnEmmet",
        "title": "Shortcut Sensei: Only Emmet Tricks"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node -e \"console.log('skip prepublish')\"",
    "lint": "eslint .",
    "test": "node ./test/runTest.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.x",
    "eslint": "^8.56.0"
