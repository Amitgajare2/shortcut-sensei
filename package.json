{
  "name": "shortcut-sensei",
  "displayName": "Shortcut Sensei",
  "description": "Learn VS Code keyboard shortcuts and Emmet tricks for HTML, CSS, and SCSS â€” with progress tracking.",
  "version": "1.0.0",
  "publisher": "amitgajare",
  "repository": {
    "type": "git",
    "url": "https://github.com/amitgajare/shortcut-sensei"
  },
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Education", "Other"],
  "activationEvents": [
